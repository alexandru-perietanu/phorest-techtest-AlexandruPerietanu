<h1>client route</h1>
<div>
    {{#if this.emailValidation.valid}}
    {{else}}
        <div class="errorMessage">{{this.emailValidation.errorMessage}}</div>
    {{/if}}
    Email: <Input class="text-input" @value={{this.email}}/>
    <button {{on "click" this.findClientByEmail}}>Find By Email</button>
</div>
<div>
    {{#if this.phoneValidation.valid}}
    {{else}}
        <div class="errorMessage">{{this.phoneValidation.errorMessage}}</div>
    {{/if}}
    Phone: <Input class="text-input" @value={{this.phone}}/>
    <button {{on "click" this.findClientByPhone}}>Find By Phone</button>
</div>

{{#if this.noResultFound}}
    <div>No results found</div>
{{else}}
    {{#each this.clients as |client|}}
        <PhorestClient @model={{client}}/>
    {{/each}}
{{/if}}
